<?xml version="1.0" encoding="UTF-8"?>
<phpunit bootstrap="Bootstrap.php"
         colors="true"
         verbose="true"
         backupGlobals="false"
         backupStaticAttributes="false"
         stopOnFailure="true">
    <testsuites>
        <testsuite name="TwbBundleTest">
            <directory suffix=".php">./TwbBundleTest/</directory>
        </testsuite>
        <testsuite name="BootstrapBasedTests">
            <directory suffix=".php">./BootstrapBasedTests/</directory>
        </testsuite>
    </testsuites>
    <filter>
        <whitelist>
            <directory suffix=".php">../src/TwbBundle/</directory>
            <file>./Module.php</file>
        </whitelist>
    </filter>
</phpunit>
